<?xml version="1.0" encoding="UTF-8" ?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
 <bean id="actor1" class="domain.Actor">
     <constructor-arg name="name" value="Irfan khan"></constructor-arg>
     <constructor-arg name="gender" value="Male"></constructor-arg>
     <constructor-arg name="age" value="35"></constructor-arg>
 </bean>
    <bean id="actor2" class="domain.Actor">
        <constructor-arg name="name" value="Salman Khan"></constructor-arg>
        <constructor-arg name="gender" value="Male"></constructor-arg>
        <constructor-arg name="age" value="50"></constructor-arg>
    </bean>
    <bean id="actor3" class="domain.Actor">
        <constructor-arg name="name" value="Alia Bhatt"></constructor-arg>
        <constructor-arg name="gender" value="Female"></constructor-arg>
        <constructor-arg name="age" value="28"></constructor-arg>
    </bean>
    <bean name="movieA,movieB" class="domain.Movie" scope="prototype">
        <constructor-arg name="actor" ref="actor1"></constructor-arg>
    </bean>
</beans>