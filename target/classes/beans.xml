<?xml version="1.0" encoding="UTF-8" ?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->

     <bean id="actor" class="com.stackroute.domain.Actor">
     <constructor-arg name="name" value="Irfan khan"></constructor-arg>
     <constructor-arg name="gender" value="Male"></constructor-arg>
     <constructor-arg name="age" value="35"></constructor-arg>
     </bean>

     <bean name="movie" class="com.stackroute.domain.Movie" autowire="constructor"></bean>
    <bean id="initialize" class="com.stackroute.demo.BeanLifecycleDemoBean" init-method="customInit" destroy-method="customDestroy">
        <property name="message" value="We are inside"></property>
    </bean>


</beans>